
<section class="fieldset">
  <h1><%= t 'articles.new.title' %></h1>
  <div class="article">

    <%= form_for @article, :url => share_index_path do |f| %>
      <%= f.label t('articles.new.url') %>
      <%= text_field :article, "url", required: true %>
      <%= f.submit t('articles.new.button.new'), :id => 'submitEntry' %>
    <%- end -%>
  </div>
</section>


